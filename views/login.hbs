<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>RegistrationForm</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<!-- MATERIAL DESIGN ICONIC FONT -->
		<link rel="stylesheet" href="fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
		
		<!-- STYLE CSS -->
		<link rel="stylesheet" href="/login/css/style.css">
	</head>

	<body>
  <div class="body">
<div class="wrapper">
			<div class="image-holder">
				<img src="images/registration-form-8.jpg" alt="">
			</div>
			<div class="form-inner">
<form action="/auth/login" method="POST">
					<div class="form-header">
						<h3>Login</h3>
						<img src="images/sign-up.png" alt="" class="sign-up-icon">
					</div>
					
          
					<div class="form-group">
						<label for="">E-mail:</label>
						<input type="email" class="form-control" data-validation="email" id="email" name="email">
					</div>
					<div class="form-group" >
						<label for="">Password:</label>
						<input type="password"  id="password" name="password" class="form-control" data-validation="length" data-validation-length="min8">
					</div>
					<button class="login">Login</button>
					
				</form>
				<div class="socials">
                {{#if message }}
                    <p>{{message}}</p>
                {{/if}}
				</div>
			</div>
			
		</div>
		
		<script src="js/jquery-3.3.1.min.js"></script>
		<script src="js/jquery.form-validator.min.js"></script>
		</div>
	</body>
</html>
